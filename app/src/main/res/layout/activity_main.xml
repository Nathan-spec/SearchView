<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Search view for filtering list view -->
   <SearchView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/idSv"
       android:layout_margin="8dp"
       android:iconifiedByDefault="false"
       android:padding="4dp"
       android:queryHint="Search Programming Language"
       />

    <!-- List View from which data is to be searched for different programming languages -->
    <ListView
        android:id="@+id/idLVProgrammingLanguages"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/idSv" />

</RelativeLayout>